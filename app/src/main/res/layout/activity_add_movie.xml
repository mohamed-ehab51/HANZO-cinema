<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161621"
    tools:context=".letssignin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/back_button"
                    android:layout_width="68dp"
                    android:layout_height="77dp"
                    android:backgroundTint="#161621"
                    android:drawableLeft="@drawable/back"
                    android:onClick="bb"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/photop"
                        android:layout_width="49dp"
                        android:layout_height="45dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="350dp"
                        android:layout_marginTop="102dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/edit"
                        android:backgroundTint="#161621"
                        android:onClick="filechoose"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="280dp"
                        tools:layout_editor_absoluteY="238dp" />

                    <ImageView
                        android:id="@+id/movie_imageView"
                        android:layout_width="411dp"
                        android:layout_height="152dp"
                        android:layout_gravity="center"
                        app:srcCompat="@android:drawable/ic_menu_gallery"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="131dp"
                        tools:layout_editor_absoluteY="93dp" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/mov_name_text_input"
                    android:layout_width="332dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:hint="Full Name*"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="39dp"
                    tools:layout_editor_absoluteY="295dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/rating_text_input"
                    android:layout_width="332dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:hint="Rating*"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="369dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/cat_text_input"
                    android:layout_width="332dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:hint="Categories*"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="443dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/desc_text_input"
                    android:layout_width="332dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:hint="Description*"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="517dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/cast_text_input"
                    android:layout_width="332dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corner"
                    android:hint="Cast*"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="40dp"
                    tools:layout_editor_absoluteY="591dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/continue_button"
                    android:layout_width="175dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#F74346"
                    android:onClick="cont"
                    android:text="Continue"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="105dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>